/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.form-line {
  display: flex;
  flex-direction: row;
  align-items: top;
  justify-content: baseline;
  margin-bottom: 24rpx;
}

.form-label {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.form-input {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.center-aligned {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cover-view {
  position: relative;
  height: 50px;
  margin-top: -50px;
  display: flex;
  text-align: center;
  justify-content: space-between;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
}

.cover-view-left {
  display: flex;
  /* justify-content: center;
  align-items: center;
  align-content: flex-start;
  flex-wrap: wrap; */
  align-items: center;
  padding-left: 16rpx;
  width: 400rpx;
}


.cover-view-right {
  margin-right: 16rpx;
}


.add-sub-control {
  height: 40px;
  margin: 8rpx;
  display: inline-block;
  background-color: rgba(245, 234, 234, 0.61)
}

.add-sub-control > text{
  font-size: 32px;
  line-height: 70rpx;
}
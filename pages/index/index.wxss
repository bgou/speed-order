/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.form-line {
  display: flex;
  flex-direction: row;
  align-items: top;
  justify-content: baseline;
  margin-bottom: 24rpx;
}

.form-label {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.form-input {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.center-aligned {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.menu-container {
  width: 100%;
  height: 480rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
}

.cover-view {
  position: relative;
  margin-top: -480rpx;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cover-view-top {
  display: flex;
  flex-direction: row-reverse;
  /* align-items: flex-end; */
  /* justify-content: flex-end; */
}

.cover-view-bottom {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
}


.cover-view-left {
  display: flex;
  align-items: center;
  padding-left: 32rpx;
  /* width: 400rpx; */
}


.cover-view-right {
  width: 352rpx;
  margin-right: 32rpx;
  display:flex;
  justify-content: flex-end;
}


.add-sub-control {
  width: 120rpx;
  height: 80rpx;
  margin: 8rpx;
  display: inline-block;
  background-color: rgba(245, 234, 234, 0.61);
}

.add-sub-control-text{
  font-size: 32px;
  /* line-height: 70rpx; */
  color: white;
}

.order-count {
  margin-top: 32rpx;
  margin-right: 32rpx;
}

.disabled-button {
  background-color: rgba(0, 0, 0, 0.3);
}